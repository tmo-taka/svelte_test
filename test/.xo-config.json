{
    "space": false,
    "rules": {
        "unicorn/filename-case": "off"
    },
    "extensions": ["svelte"],
    "extends": ["plugin:svelte/recommended"],
    "parser": "@typescript-eslint/parser",
    "overrides": [
        {
            "files": ["**/*.svelte"],
            "parser": "svelte-eslint-parser",
            "parserOptions": {
                "parser": "@typescript-eslint/parser"
            }
        }
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "extraFileExtensions": [".svelte"]
    }
}